ENTRY(_start)

SECTIONS {
    . = @LINKER_LOAD_ADDR@;

    .text : {
        *(.text._start)   /* Zorg dat _start altijd als eerste komt */        
        *(.text*)
    }

    .bss : {
        *(.bss*)
    }

    .data : {
        *(.data*)
    }

    . = ALIGN(16);
    .stack : {
        *(.stack*)
        . = . + 0x1000; /* 4KB stack */
    }
    __stack_top__ = .;
}